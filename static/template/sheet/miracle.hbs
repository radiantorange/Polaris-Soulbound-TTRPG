<form class="{{cssClass}}" autocomplete="off">
    <div class="avatar">
        <img class="profile-img" src="{{item.img}}" data-edit="img" data-tooltip="{{item.name}}" />
    </div>
    <div class="sheet-body">
        <div class="sheet-header">
            <h1><input name="name" type="text" value="{{item.name}}" /></h1>
        </div>
        <div class="sheet-subHeader">
            <div class="segment-horizontal">
                <h3>{{localize "MIRACLE.OF"}}</h3>
                <input name="system.god" type="text" value="{{system.god}}" placeholder="{{localize 'MIRACLE.GOD'}}"
                    style="width:60%" />
            </div>
        </div>
        <hr>
        <div class="sheet-tabs tabs">
            <b class="item" data-tab="description">{{localize "TAB.DESCRIPTION"}}</b>
            <b class="item" data-tab="effects">{{localize "TAB.EFFECTS"}}</b>
        </div>
        <div class="sheet-content">
            <div class="tab" data-tab="description">
                <div class="content-box">
                    <div class="content-header">
                        <h1>{{localize "TITLE.STATS"}}</h1>
                    </div>
                    <div class="content-row">
                        <div class="entry-vertical">
                            <h3>{{localize "MIRACLE.TARGET"}}</h3>
                            <input name="system.target" type="text" value="{{system.target}}" />
                        </div>
                        <div class="entry-vertical">
                            <h3>{{localize "SPELL.RANGE"}}</h3>
                            <select name="system.range">
                                {{#select system.range}}
                                    {{#each (config "range") as |range r|}}
                                        <option value="{{r}}">{{range}}</option>
                                    {{/each}}
                                {{/select}}
                            </select>
                        </div>
                        <div class="entry-vertical">
                            <h3>{{localize "MIRACLE.DURATION"}}</h3>
                            <input name="system.duration" type="text" value="{{system.duration}}" />
                        </div>
                        <div class="entry-vertical">
                            <h3>{{localize "MIRACLE.COST"}}</h3>
                            <input name="system.cost" type="number" value="{{system.cost}}" data-dtype="Number" />
                        </div>
                    </div>
                    <div class="content-row">
                        <div class="entry-vertical">
                            <h3>{{localize "MIRACLE.TEST"}}</h3>
                            <div class="entry-inputs">
                                <input name="system.test.dn" type="text" placeholder="{{localize 'MIRACLE.DN'}}"
                                    value="{{system.test.dn}}" />
                                <select name="system.test.attribute">
                                    {{#select system.test.attribute}}
                                        <option value="">-</option>
                                        {{#each (config "attributes") as |attribute a|}}
                                            <option value="{{a}}">{{attribute}}</option>
                                        {{/each}}
                                    {{/select}}
                                </select>
                                <select name="system.test.skill">
                                    {{#select system.test.skill}}
                                        <option value="">-</option>
                                        {{#each (config "skills") as |skill s|}}
                                            <option value="{{s}}">{{skill}}</option>
                                        {{/each}}
                                    {{/select}}
                                </select>
                                <h3>{{localize "MIRACLE.OPPOSED"}}</h3>
                                <input name="system.test.opposed"
                                    data-tooltip="Checking this will roll a Soul (Devotion) Test when using the miracle"
                                    type="checkbox" {{checked system.test.opposed}} />
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="content-box" style="height:100%">
                    <div class="content-header">
                        <h1>{{localize "TITLE.DESCRIPTION"}}</h1>
                    </div>
                    <div class="content-wrapper">
                        {{editor enrichment.system.description target="system.description" engine="prosemirror" button=true owner=owner editable=editable}}
                    </div>
                </div>
            </div>
            <div class="tab" data-tab="effects">
                {{> systems/polaris-soulbound/template/sheet/tab/item-effects.hbs}}
            </div>
        </div>
    </div>
</form>