            <h3>{{localize "BIO.HEIGHT"}}</h3>
            <input name="system.bio.height" type="text" value="{{system.bio.height}}" />
        </div>
        <div class="entry-vertical">
            <h3>{{localize "BIO.WEIGHT"}}</h3>
            <input name="system.bio.weight" type="text" value="{{system.bio.weight}}" />
        </div>
    </div>
    <div class="content-row">
        <div class="entry-vertical">
            <h3>{{localize "BIO.EYETYPE"}}</h3>
            <input name="system.bio.eyeType" type="text" value="{{system.bio.eyeType}}" />
        </div>
        <div class="entry-vertical">
            <h3>{{localize "BIO.EYES"}}</h3>
            <input name="system.bio.eyes" type="text" value="{{system.bio.eyes}}" />
        </div>
        <div class="entry-vertical">
            <h3>{{localize "BIO.HAIR"}}</h3>
            <input name="system.bio.hair" type="text" value="{{system.bio.hair}}" />
        </div>
    </div>
    <div class="content-row">
        <div class="entry-vertical">
            <h3>{{localize "BIO.DISTINGUISHING_FEATURES"}}</h3>
            <input name="system.bio.distinguishingFeatures" type="text" value="{{system.bio.distinguishingFeatures}}" />
        </div>
    </div>
</div>
<hr>
<div class="content-box">
    <div class="content-header">
        <h1>{{localize "BIO.BACKGROUND"}}</h1>
    </div>
    <div class="content-row">
        <div class="entry-vertical">
            <h3>{{localize "BIO.FACTION"}}</h3>
            <input name="system.bio.faction" type="text" value="{{system.bio.faction}}" />
        </div>
        <div class="entry-vertical">
            <h3>{{localize "BIO.SUBFACTION"}}</h3>
            <input name="system.bio.subfaction" type="text" value="{{system.bio.subfaction}}" />
        </div>
    </div>
    <div class="content-wrapper" style="min-height: 150px;">
        {{{editor enrichment.system.bio.background target="system.bio.background" engine="prosemirror" button=true owner=owner editable=editable}}}
    </div>
</div>
<hr>
<div class="item-list">
    <div class="item-header">
        <h1 class="header-text">{{localize "TITLE.GOALS"}}</h1>
        <a class="item-create absolute" data-tooltip="AÃ±adir Objetivo" data-type="partyItem" data-category="shortGoal"><i
                class="fas fa-plus"></i></a>
    </div>
    {{#each items.goals as |item|}}
        <div class="item" data-item-id="{{item.id}}">
            <div class="item-content">
                {{#if item.state}}
                    <a class="item-property fit completed active" data-tooltip="{{localize 'GOAL.COMPLETED'}}"><i
                            class="far fa-check-circle"></i></a>
                {{else}}
                    <a class="item-property fit" data-tooltip="{{localize 'GOAL.IN_PROGRESS'}}"><i
                            class="far fa-circle"></i></a>
                {{/if}}
                <div class="item-property item-name">
                    <a class="item-edit">{{item.name}}</a>
                </div>
                <div class="item-property flex">{{item.Category}}</div>
                <div class="item-controls">
                    <a class="item-control item-edit"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-delete"><i class="fas fa-trash"></i></a>
                </div>
            </div>
            <div class="item-content">
                <div class="item-property description dropdown-target">{{{enrich item.description}}}</div>
            </div>
        </div>
    {{/each}}
</div>
<hr>
<div class="content-box">
    <div class="content-header" style="padding:0px 4px 0px 24px;">
        <h1>{{localize "TITLE.CONNECTIONS"}}</h1>
    </div>
    <div class="content-wrapper" style="min-height: 150px;">
        {{{editor enrichment.system.bio.connections target="system.bio.connections" engine="prosemirror" button=true owner=owner editable=editable}}}
    </div>
</div>