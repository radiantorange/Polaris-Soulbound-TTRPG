<form class="polaris-soulbound sheet item">
  <div class="sheet-body">
    <div class="sheet-tabs tabs" data-group="primary">
      <b class="item" data-tab="properties">{{localize "TAB.PROPERTIES"}}</b>
      <b class="item" data-tab="effects">{{localize "TAB.EFFECTS"}}</b>
    </div>
    <div class="sheet-content">
      <div class="tab" data-group="primary" data-tab="properties">

        <div class="content-box" style="border-top:2px solid var(--color-active)">
          <div class="content-row">
            <div class="entry-vertical">
              <h3>{{localize "ZONE.COVER"}}</h3>
              <div class="entry-inputs">
                <select name="flags.polaris-soulbound.cover">
                  {{#select object.flags.polaris-soulbound.cover}}
                    <option value=""></option>
                    {{#each (config "zoneCover") as |value k|}}
                      <option value="{{k}}">{{value}}</option>
                    {{/each}}
                  {{/select}}
                </select>
              </div>
            </div>
          </div>

          <div class="content-row">
            <div class="entry-vertical">
              <h3>{{localize "ZONE.HAZARD"}}</h3>
              <div class="entry-inputs">
                <select name="flags.polaris-soulbound.hazard">
                  {{#select object.flags.polaris-soulbound.hazard}}
                    <option value=""></option>
                    {{#each (config "zoneHazard") as |value k|}}
                      <option value="{{k}}">{{value}}</option>
                    {{/each}}
                  {{/select}}
                </select>
              </div>
            </div>
            <div class="entry-vertical">
              <h3>{{localize "ZONE.HAZARD_IGNORE_ARMOUR"}}</h3>
              <div class="entry-inputs">
                <input type="checkbox" name="flags.polaris-soulbound.ignoreArmour" {{checked
                  object.flags.polaris-soulbound.ignoreArmour}} />
              </div>
            </div>
          </div>

          <div class="content-row">
            <div class="entry-vertical">
              <h3>{{localize "ZONE.OBSCURED"}}</h3>
              <div class="entry-inputs">
                <select name="flags.polaris-soulbound.obscured">
                  {{#select object.flags.polaris-soulbound.obscured}}
                    <option value=""></option>
                    {{#each (config "zoneObscured") as |value k|}}
                      <option value="{{k}}">{{value}}</option>
                    {{/each}}
                  {{/select}}
                </select>
              </div>
            </div>
          </div>


          <div class="content-row">
            <div class="entry-vertical">
              <h3>{{localize "ZONE.DIFFICULT_TERRAIN"}}</h3>
              <div class="entry-inputs">
                <input type="checkbox" name="flags.polaris-soulbound.difficult" {{checked
                  object.flags.polaris-soulbound.difficult}} />
              </div>
            </div>
          </div>

        </div>
      </div>
      <div class="tab" data-group="primary" data-tab="effects">
        {{> systems/polaris-soulbound/template/sheet/tab/item-effects.hbs}}
      </div>
    </div>
  </div>
  <button type="submit"><i class="fas fa-save"></i> Save</button>
</form>