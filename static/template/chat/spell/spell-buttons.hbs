{{#if canOvercast}}
    <div class="content-wrapper overcast-buttons">
        <div class="overcast-labels">
            <h3>Overcasts <a class="overcast-reset"><i class="fas fa-redo"></i></a></h3>
            <label>Spent: {{result.overcasts.spent}}/{{result.degree}}</label>
        </div>
        <div class="overcast-groups">
            {{#each result.overcasts.options as |option index|}}
                <div class="overcast-group" data-index={{index}}>
                    <button type="button" class="overcast-button">{{option.title}}
                        {{#if option.allocation}}({{option.allocation}}){{/if}}</button>

                    <h3> {{#if option.showTotal}} Total: {{lookup ../result option.property}} {{/if}}</h3>

                </div>
            {{/each}}
        </div>
    </div>
{{/if}}


{{#unless result.success}}
    <div class="content-wrapper test-buttons">
        <button class="spell-fail-button" type="button">The Price of Failure</button>
    </div>
{{/unless}}

{{#if hasTest}}
    <div class="content-wrapper test-buttons">
        <button class="test-button" type="button">{{ItemTestDisplay}}</button>
    </div>
{{/if}}

{{#if testEffects.length}}
    <div class="content-wrapper test-buttons">
        {{#each testEffects as |effect e|}}
            <button class="effect-button" data-tooltip="Aplica el efecto a los tokens seleccionados o a tu personaje asignado"
                data-id="{{effect.id}}" type="button"><img src="{{effect.icon}}" width="25" height="25"> Apply
                {{effect.name}}</button>
        {{/each}}
    </div>
{{/if}}